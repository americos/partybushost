<div id="partydetail">
	<h2><%= @partydetail.title%></h2>

	<!-- Rails will interpret this array to mean edit_partyevent_partydetail_path -->
	<%= link_to "Edit Partydetail", [:edit, @partyevent, @partydetail]%>
	<%= link_to "Delete Partydetail", [@partyevent, @partydetail], :method => :delete, 
			:confirm => "Are you sure you want to delete this Partydetail?"%>
	
	<br /><small>Created by <%= @partydetail.user.email %></small>
	
	<!-- simple_format is a method that converts line breaks chars into <br> -->
	<%= simple_format(@partydetail.description)%>
</div>